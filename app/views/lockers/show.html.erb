<div class="container" id="show">
  <div class="row">
    <div class="col-lg-6">
      <div class="card" style="width: 100%;">
        <%= image_tag @locker.photo, class: 'card-img-top' %>
        <div class="card-body">
              <h5 class="card-title">
                <%= @locker.address %>
              </h5>
              <h6> Size:
                <%= @locker.size %>
              </h6>
              <p class="card-text">
                Price:
               <%= @locker.price %> â‚¬/h
              </p>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-lg-6">
        <div class="form-group simple">
          <%= simple_form_for [@locker, @booking], method: "post" do |f| %>
            <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.button :submit, "Reserve", class: "btn btn-flat" %>
          <% end %>
        </div>
        <div class="row" id="show-map">
          <div class="col-sm-12 col-lg-6">
            <div class="map-responsive">
              <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA0s1a7phLN0iaD6-UE7m4qP-z21pH0eSc&q=Eiffel+Tower+Paris+France" width="538" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
          </div>
        </div>
    </div>

  <div class="row" id="show-map">
    <div class="col">
      <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
</div>
