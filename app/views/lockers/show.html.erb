<div class="container" id="show">
  <div class="row">
    <div class="col-lg-6">
      <div class="card" style="width: 100%;">
        <%= image_tag @locker.photo, class: 'card-img-top' %>
        <div class="card-body">
              <h5 class="card-title">
                <%= @locker.address %>
              </h5>
              <h6> Size:
                <%= @locker.size %>
              </h6>
              <p class="card-text">
                Price:
               <%= @locker.price %> â‚¬/h
              </p>
        </div>
      </div>
    </div>

    <div class="col-sm-12 col-lg-6">
        <div class="d-flex justify-content-between">
          <%= simple_form_for [@locker, @booking], method: "post" do |f| %>
          <div class="d-flex">
            <div id="hora">
            <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            </div>
            <%= f.input :start_time, as: :string, required: false, input_html: {class: "timepicker"} %>
            </div>
            <div class="d-flex justify-content-between">
              <div id="hora">
            <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            </div>
            <%= f.input :end_time, as: :string, required: false, input_html: {class: "timepicker"} %>
            </div>
            <%= f.button :submit, "Reserve", class: "btn btn-flat" %>
          <% end %>
        </div>
              <div
  id="map"
  style="width: 100%;
  height: 475px;
  margin-top: 20px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
    </div>
